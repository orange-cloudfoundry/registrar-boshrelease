#!/usr/bin/env bash

set -e -x

cd ${BUILD_DIR}/cf-uaac

rm -rf ./vendor/cache/

set +e
for i in {1..3}; do
  bundle config --local
  BUNDLE_WITHOUT=development:test bundle _2.3.20_ package --all --all-platforms --no-install
  exit_code="$?"

  if [ "${exit_code}" == "0" ]; then
    break
  fi
  sleep 1
done
set -e
if [ "${exit_code}" != "0" ]; then
  echo "ERROR: Failed to run 'bundle package' after 3 attempts"
  exit "${exit_code}"
fi

rm -rf ./vendor/cache/ruby
rm -rf ./vendor/cache/vendor
bundle config --delete NO_INSTALL

rm -rf .bundle/
